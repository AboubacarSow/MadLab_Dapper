@model GalleryDto
@{
    ViewData["Title"] = "Güncelleme";
}


<h4 class="text-center text-secondary"> Galery Güncelleme İşlemi </h4>


<div class="container" style="max-width:800px">
    <hr />

    <form method="post">
        <input type="hidden" asp-for="GalleryId" />
        <input type="hidden" asp-for="ImageUrl" />
        <label class="form-label my-1">Resim Yükleyin</label>
        <input type="file" class="form-control" asp-for="ImageFile" />
        <br />
        <div class="d-flex justify-content-center my-3">
            <button type="submit" class="btn btn-success me-2">
                <i class="fa-solid fa-pen"></i>
                Güncelleme
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i>
                Listeye  Dön
            </a>
        </div>
    </form>
</div>
