@model List<GetSocialMediaWithDoctor>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container d-flex justify-content-between px-3 mt-2">
    <h4 class="text-secondary">Sosyal Medya</h4>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Yeni Ekle
        </a>
    </p>
</div>

<table class="table">
    <thead class="bg-dark">
        <tr class="text-light">
            <th>No</th>
            <th>Sosyal Medya</th>
            <th>İkon</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td> @count </td>
                <td class="text-info"> @item.Name</td>
                <td> <a href="https://@item.Link"> 
                        <i class="@item.Icon"></i>
                    </a> 
                 </td>
                <td>
                    <div class="">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">
                            <i class="fa-solid fa-pen"></i>
                            Güncelle
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                            Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
