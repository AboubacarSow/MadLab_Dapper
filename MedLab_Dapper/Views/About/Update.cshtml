@model UpdateAboutDto
@{
    ViewData["Title"] = "Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center text-secondary"> Hakkımızda Güncelleme İşlemi </h4>

<div class="container" style="max-width:800px">
    <hr />
    <form asp-action="Update" enctype="multipart/form-data">
        <input type="hidden" asp-for="AboutId" />
        <input type="hidden" asp-for="ImageUrl" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group my-2">
            <label class="control-label mb-1"> Video Linki</label>
            <input asp-for="VideoUrl" class="form-control" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label class="control-label mb-1"> Açıklama</label>
            <textarea asp-for="Description" class="form-control" > </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label class="control-label mb-1">Resim Yükle</label>
            <input asp-for="ImageFile" type="file" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
            <br />
        </div>
        <div class="d-flex justify-content-center my-3">
            <button type="submit" class="btn btn-success me-2">
                <i class="fa-solid fa-pen"></i>
                Güncelle
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i>
                Listeye  Dön
            </a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

