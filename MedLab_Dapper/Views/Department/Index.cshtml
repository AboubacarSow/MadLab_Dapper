@model IEnumerable<MedLab_Dapper.Dtos.DepartmentDtos.ResultDepartmentDto>

@{
    ViewData["Title"] = "Departmentlar";
    int count = 0;
}

<div class="container d-flex justify-content-between px-3 ">
    <h4 class="text-secondary"> Departmanlar</h4>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Yeni Ekle
        </a>
    </p>
</div>
<table class="table">
    <thead class="bg-dark">
        <tr class="text-light">
            <th>
                No
            </th>
            <th>
                Departman 
            </th>
            <th>
                Açıklama
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            count++;
            <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="btn-group">
                <a asp-action="Update" asp-route-id="@item.DepartmentId" class="btn btn-success">
                    <i class="fa-solid fa-pen"></i>
                    Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i>
                    Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
