@model GetDepartmentById

@{
    ViewData["Title"] = "Güncelleme";
}


<h4 class="text-center text-secondary"> Departman Güncelleme İşlemi </h4>

<div class="container" style="max-width:800px">
    <hr />
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group my-2">
                <label class="control-label mb-1"> Departman Adı</label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label class="control-label mb-1"> Görsel</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Görsel Yolunu Giriniz" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label class="control-label mb-1">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
            </div>
            <div class="d-flex justify-content-center my-3">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fa-solid fa-pen"></i>
                    Güncelle
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i>
                    Listeye  Dön
                </a>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
