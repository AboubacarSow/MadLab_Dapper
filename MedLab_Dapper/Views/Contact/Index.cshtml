@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="container d-flex justify-content-between px-3 mt-2">
    <h4 class="text-secondary"> İletişim Bilgiler</h4>
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Yeni Ekle
        </a>
    </p>
</div>

<table class="table">
    <thead class="bg-dark">
        <tr class="text-light">
            <th>No</th>
            <th>Mail</th>
            <th>Telefon Numara </th>
            <th>Konu </th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td> @count </td>
                <td class="text-info"> @item.Email</td>
                <td> @item.PhoneNumber</td>
                <td>
                    @item.Location
                </td>
                <td>
                    <div class="">
                        <a asp-action="Update" asp-route-id="@item.ContactId" class="btn btn-success">
                            <i class="fa-solid fa-pen"></i>
                            Güncelle
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ContactId" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                            Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

