@model CreateContactDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="text-center text-secondary"> İletişim Ekleme İşlemi</h4>

<div class="container" style="max-width:800px">
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group my-2">
            <label class="control-label my-1">Mail</label>
            <input asp-for="Email" class="form-control"  placeholder="Mail Giriniz"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label class="control-label my-1"> Telefon Numara</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numaram Giriniz" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label class="control-label  my-1">Address</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group my-2">
            <label class="control-label my-1">Konu</label>
            <input asp-for="MapUrl" class="form-control"  placeholder="Konu linki Giriniz"/>
            <span asp-validation-for="MapUrl" class="text-danger"></span>
            <br />
        </div>
        <div class="d-flex justify-content-center my-3">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fa-solid fa-plus"></i>
                Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i>
                Listeye  Dön
            </a>
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

